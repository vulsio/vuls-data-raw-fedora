						"short_desc": "CVE-2023-42822 xrdp: Unchecked access to font glyph info",
						"delta_ts": "2023-10-05 05:58:59 +0000",
						"bug_status": "NEW",
						"keywords": "Security",
						"priority": "medium",
						"bug_severity": "medium",
						"depends_on": [
							"2242232",
							"2242233"
